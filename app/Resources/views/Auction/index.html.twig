{% extends 'base.html.twig' %}

{% block body %}

    <h1> Lista aukcji </h1>

    {% for auction in auctions %}
        <div class="panel {{ auctionStyle(auction.expiresAt) }}" style="width: 18rem;">
            <div class="panel-heading">
                <h4><a href="{{ url("auction_details",{"id": auction.id}) }}">{{ auction.title }}</a></h4>
            </div>
            <div class="panel-body">
                <p>{{ auction.description }}</p>
            </div>
            <ul class="list-group">
                <li class="list-group-item">Cena: {{ auction.price }} zł</li>
                <li class="list-group-item">Cena wywoławcza: {{ auction.startingPrice }} zł</li>
                <li class="list-group-item">Aukcja kończy się: {{ auction.expiresAt | expireDate }} </li>
            </ul>
        </div>
        <br/>
    {%  else %}
        <div class="panel panel-warning">
                <h3>Niestety nie ma żadnej aukcji.</h3>
        </div>
    {% endfor %}

{% endblock %}
